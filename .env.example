# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=bucket_db

# MinIO
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=bucket
MINIO_USE_SSL=false

# Application
PORT=3000
NODE_ENV=production

# JWT
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRATION=24h

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Email (optional)
MAIL_HOST=
MAIL_PORT=587
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM=noreply@bucket.local

# Trash
TRASH_EXPIRE_DAYS=30

# Docker Compose
APP_PORT=3000
DB_PORT=5432
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
